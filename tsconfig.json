{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "netlify-functions", "jsonwebtoken", "stripe", "zod", "bcrypt", "uuid"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false
  },
  "include": [
    "stubs-node.d.ts",
    "runmigrations.ts",
    "netlify/functions/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
