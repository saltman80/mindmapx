{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist/netlify/functions",
    "rootDir": "netlify/functions",
    // ensure imports include extensions and support Netlify functions
    "types": ["node", "@netlify/functions"],
    "typeRoots": [
      "node_modules/@types",
      "node_modules"
    ]
  },
  "include": ["netlify/functions/**/*.ts"]
}
